---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import AboutSection from '../components/AboutSection.astro';
import SkillsSection from '../components/SkillsSection.astro';
import ExperienceSection from '../components/ExperienceSection.astro';
import ContactSection from '../components/ContactSection.astro';
import { siteConfig, footer } from '../data/ja';
---
<Layout title={`${siteConfig.name} - ${siteConfig.title}`} description={siteConfig.description}>
  <HeroSection />
  <div class="h-px bg-border" />
  <AboutSection />
  <div class="h-px bg-border" />
  <SkillsSection />
  <div class="h-px bg-border" />
  <ExperienceSection />
  <div class="h-px bg-border" />
  <ContactSection />
  <footer class="py-12 text-center text-xs text-muted font-mono">
    {footer.text}
  </footer>
</Layout>
