---
interface Props {
  about: string[];
  profileLabel: string;
}
const { about, profileLabel } = Astro.props;
---
<section id="about" class="py-20">
  <h2 class="font-mono text-sm text-primary tracking-wider uppercase mb-10">
    // About
  </h2>
  <div class="grid md:grid-cols-[200px_1fr] gap-8">
    <div class="text-sm text-muted font-mono">{profileLabel}</div>
    <div class="flex flex-col gap-6 text-foreground leading-relaxed">
      {about.map((paragraph) => (
        <p>{paragraph}</p>
      ))}
    </div>
  </div>
</section>
